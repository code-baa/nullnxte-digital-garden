{% if settings.dgHomeLink === true %}
<nav class="navbar" style="position: fixed; top: 0; left: 0; width: 100%; background: transparent; z-index: 9999; padding: 10px 20px; display: flex; align-items: center;">
    <!-- Site title -->
    <a href="/" style="text-decoration: none; margin-right: 20px;">
        <h1 style="margin: 0;">{{ meta.siteName }}</h1>
    </a>

    <!-- Divider -->
    <div style="width:1px; height:24px; background:#999; margin-right: 20px;"></div>

    <!-- Menu items -->
    <a href="/" style="text-decoration: none; margin-right: 15px;">
        <h4 style="margin: 0;">Home</h4>
    </a>
    <a href="/games" style="text-decoration: none; margin-right: 15px;">
        <h4 style="margin: 0;">Games</h4>
    </a>
    <a href="/music" style="text-decoration: none; margin-right: 15px;">
        <h4 style="margin: 0;">Music</h4>
    </a>
    <a href="/art" style="text-decoration: none; margin-right: 15px;">
        <h4 style="margin: 0;">Art</h4>
    </a>

    {% if settings.dgEnableSearch === true %}
        {% include "components/searchButton.njk" %}
    {% endif %}
</nav>
{% else %}
<div class="empty-navbar">
    {% if settings.dgEnableSearch === true %}
        {% include "components/searchButton.njk" %}
    {% endif %}
</div>
{% endif %}
